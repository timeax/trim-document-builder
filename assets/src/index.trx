{@import { Html, Head, Route } from 'trim.js/nodes'}
{@import { useSheet } from 'trim.js'}
{@use { Header } from './components/header'}
{@use { SearchField } from './components/search'}
{@use { About } from './components/about'}
{@import { styles } from './assets/style'}

{@Router}
    <Html>
        <Head title={{'Trim Docs'}} />
        <body>
            <Header />
            <div class="content-area">
                <aside>
                    <SearchField />
                </aside>
                <div class="doc-content">
                    {@Routes}
                        <Route element={{<>this is a tests</>}} route='/' />
                        <Route element={{<About />}} route='/about' />
                    {/Routes}
                </div>
            </div>
        </body>
    </Html>
{/Router}

<{
    useSheet(styles);
}>