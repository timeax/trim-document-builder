{
    "name": "trim-document-builder",
    "version": "0.0.17",
    "description": "Document builder for vscode",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "link": "npm link trim-engine",
        "prepublishOnly": "npm run compress && npm version patch --no-git-tag-version",
        "watch": "cd src && tsc -w",
        "build": "rm -r dist && cd src && tsc -b --strict=false",
        "compress": "rm -r dist && microbundle --compress --define process.env.NODE_ENV=production --no-sourcemap --tsconfig ./src/config.json --format esm,cjs --target node"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/timeax/trim-document-builder.git"
    },
    "author": "David Okpako",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/timeax/trim-document-builder/issues"
    },
    "homepage": "https://github.com/timeax/trim-document-builder#readme",
    "devDependencies": {
        "@types/charcodes": "^0.2.0",
        "@types/eslint": "^8.44.1",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@babel/parser": "^7.22.7",
        "@timeax/acorn-typescript": "^0.0.2",
        "@timeax/utilities": "^1.1.1",
        "acorn-loose": "^8.4.0",
        "acorn-typescript": "^1.4.12",
        "charcodes": "^0.2.0",
        "eslint": "^8.46.0",
        "trim-engine": "^0.0.18"
    }
}
